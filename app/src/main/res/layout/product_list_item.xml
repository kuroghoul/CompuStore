<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    style="@style/FullFocusable"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

                >
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                    android:id="@+id/product_description_tag"
                    style="@style/TextViewTag"
                    android:text="@string/product_description"
                    />
                    <TextView
                    android:id="@+id/product_description_text"
                    style="@style/TextViewGeneral"

                    tools:text="...Description: "
                    />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <TextView
                    android:id="@+id/product_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge" />
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/CardView.InnerDivisorHorizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/product_category_tag"
                        style="@style/TextViewTag"
                        android:text="@string/product_category"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/product_category_text"
                        style="@style/TextViewGeneral"
                        tools:text="...Categoria: "
                        android:layout_gravity="center"/>
                </LinearLayout>

                <View
                    style="@style/CardView.InnerDivisorVertical"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/product_price_tag"
                        style="@style/TextViewTag"
                        android:text="@string/product_price"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/product_price_text"
                        style="@style/TextViewGeneral"
                        tools:text="...Precio: "
                        android:layout_gravity="center"/>
                </LinearLayout>

                <View
                    style="@style/CardView.InnerDivisorVertical"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/product_qty_tag"
                        style="@style/TextViewTag"
                        android:text="@string/product_qty"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/product_qty_text"
                        style="@style/TextViewGeneral"
                        tools:text="...Cantidad: "
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>

</RelativeLayout>











