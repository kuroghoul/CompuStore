<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">
        <EditText
            android:id="@+id/dialog_add_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/dialog_hint_product_description"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/dialog_add_product_txtcategory"
                android:text="CategorÃ­a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
            <Spinner
                android:id="@+id/dialog_add_product_spinner_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/dialog_add_product_txtqty"
                android:text="Cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
            />

            <NumberPicker
                android:id="@+id/dialog_add_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <EditText
            android:id="@+id/dialog_add_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="number"
            android:hint="@string/dialog_hint_product_price"

            />
    </LinearLayout>


</LinearLayout>