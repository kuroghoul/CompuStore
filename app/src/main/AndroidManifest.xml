        <activity android:name=".android.compustore.AssemblyModifyActivity" />
        <activity android:name=".android.compustore.CustomersInsertActivity" />
        <activity android:name=".android.compustore.CustomersModifyActivity" />
        <activity android:name=".android.compustore.OrdersInsertActivity" />
        <activity android:name=".android.compustore.OrdersModifyActivity" />
        <activity android:name=".android.compustore.OrderSearchAssemblyActivity" />
        <activity android:name=".android.compustore.OrderSimulatorActivity" />
